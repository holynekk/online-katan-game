<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.group12.controller.LeaderboardController"
>
    <Label layoutX="250.0" layoutY="30.0" prefHeight="141.0" prefWidth="400.0" text="LEADERBOARD" textFill="BLACK">
        <font>
            <Font name="System Bold" size="36.0" />
        </font>
    </Label>

    <Button
        fx:id="backButton"
        layoutX="300.0"
        layoutY="255.0"
        mnemonicParsing="false"
        onAction="#backToMenu"
        prefHeight="32.0"
        prefWidth="120.0"
        style="-fx-background-color: #404040; -fx-background-radius: 0px;"
        text="Back"
        textFill="WHITE"
    >
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
    <TableView fx:id="scoreTableView" layoutX="300.0" layoutY="140.0" prefWidth="350.0">
        <columns>
            <TableColumn text="Name" prefWidth="150.0"/>
            <TableColumn text="Total Wins" prefWidth="120.0"/>
            <TableColumn text="Score" prefWidth="80.0"/>
        </columns>

    </TableView>

</AnchorPane>
