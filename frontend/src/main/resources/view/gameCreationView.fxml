                                    <Insets left="20.0" />
                                 </HBox.margin>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                                 <toggleGroup>
                                    <ToggleGroup fx:id="cpuOrOnline" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton focusTraversable="false" mnemonicParsing="false" text="Online" toggleGroup="$cpuOrOnline">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </RadioButton>
                           </children>
                        </HBox>
                        <TextField fx:id="lobbyNameText" focusTraversable="false" />
                        <TextField fx:id="lobbyDescriptionText" focusTraversable="false" />
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <RadioButton focusTraversable="false" mnemonicParsing="false" onAction="#passwordRequiredAction" text="Yes">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                                 <toggleGroup>
                                    <ToggleGroup fx:id="passwordRequired" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton focusTraversable="false" mnemonicParsing="false" onAction="#passwordRequiredAction" selected="true" text="No" toggleGroup="$passwordRequired">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </RadioButton>
                           </children>
                        </HBox>
                        <TextField fx:id="passwordText" disable="true" focusTraversable="false" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="createButton" focusTraversable="false" mnemonicParsing="false" onAction="#createGame" text="Create">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets top="30.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
