<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.group12.controller.RegisterController"
    alignment="center"
    >

    <AnchorPane BorderPane.alignment="CENTER">
        <children>

            <Text fill="BLACK" layoutX="71.0" layoutY="143.0" strokeType="OUTSIDE" strokeWidth="0.0" text="KATAN" wrappingWidth="263.51171875">
                <font>
                    <Font name="System Bold" size="54.0" />
                </font>
            </Text>

            <TextField
                fx:id="email"
                layoutX="49.0"
                layoutY="163.0"
                prefHeight="25.0"
                prefWidth="202.0"
                promptText="Email"
                style="-fx-background-color: transparent; -fx-border-color: #404040; -fx-border-width: 0px 0px 2px 0px;"
            />
            <TextField
                fx:id="username"
                layoutX="49.0"
                layoutY="202.0"
                prefHeight="25.0"
                prefWidth="202.0"
                promptText="Username"
                style="-fx-background-color: transparent; -fx-border-color: #404040; -fx-border-width: 0px 0px 2px 0px;"
            />
            <TextField
                fx:id="displayName"
                layoutX="49.0"
                layoutY="241.0"
                prefHeight="25.0"
                prefWidth="202.0"
                promptText="Display Name"
                style="-fx-background-color: transparent; -fx-border-color: #404040; -fx-border-width: 0px 0px 2px 0px;"
            />
            <PasswordField
                fx:id="password"
                layoutX="49.0"
                layoutY="280.0"
                prefHeight="25.0"
                prefWidth="202.0"
                promptText="Password"
                style="-fx-background-color: transparent; -fx-border-color: #404040; -fx-border-width: 0px 0px 2px 0px;"
            />
            <PasswordField
                fx:id="confirmPassword"
                layoutX="49.0"
                layoutY="319.0"
                prefHeight="25.0"
                prefWidth="202.0"
                promptText="Confirm Password"
                style="-fx-background-color: transparent; -fx-border-color: #404040; -fx-border-width: 0px 0px 2px 0px;"
            />

            <Button fx:id="registerButton" layoutX="112.0" layoutY="372.0" mnemonicParsing="false" onAction="#register" prefHeight="32.0" prefWidth="76.0" style="-fx-background-color: #404040; -fx-background-radius: 0px;" text="Register" textFill="WHITE">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor></Button>

            <Text fill="#404040" layoutX="66.0" layoutY="430.0" onMouseClicked="#showLoginScene" strokeType="OUTSIDE" strokeWidth="0.0" text="Already have an account? Login">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Text>

        </children>
    </AnchorPane>

</HBox>
